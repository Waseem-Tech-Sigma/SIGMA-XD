<body>
  <h1>Welcome Friend</h1>
  <h2>Waseem-Tech Pair Code Site</h2>
  <input type="text" id="number" placeholder="Enter WhatsApp number"><br>
  <button onclick="generate()">Generate Pair Code</button>
  <div id="output"></div>

  <script>
    function generate() {
      const num = document.getElementById('number').value.trim();
      if (!/^[0-9]{8,15}/.test(num)) 
        document.getElementById('output').innerHTML = "❌ Invalid number! Enter 8 to 15 digits.";
        return;
      
      const pairCode = Math.random().toString(36).substring(2, 10).toUpperCase();
      document.getElementById('output').innerHTML = `✅ Your Pair Code: <b>{pairCode}</b><br>Use this to link your WhatsApp bot.`;
    }
  </script>
</body>
